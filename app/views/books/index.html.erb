<% content_for :title, "Books" %>

<div class="page-header">
  <h1>Books</h1>
  <%= link_to "Add New Book", new_book_path, class: "btn btn-primary" %>
</div>

<div class="stats">
  <div class="stat-card">
    <h3><%= @available_books %></h3>
    <p>Available Books</p>
  </div>
  <div class="stat-card">
    <h3><%= @out_of_stock_books %></h3>
    <p>Out of Stock</p>
  </div>
</div>

<div class="table-container">
  <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Author</th>
        <th>ISBN</th>
        <th>Category</th>
        <th>Status</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= link_to book.title, book %></td>
          <td><%= book.author %></td>
          <td><%= book.isbn %></td>
          <td><%= book.category.name %></td>
          <td>
            <span class="status <%= book.available? ? 'available' : 'borrowed' %>">
              <%= book.available? ? 'Available' : 'Borrowed' %>
            </span>
          </td>
          <td class="actions">
            <%= link_to "View", book, class: "btn btn-sm" %>
            <%= link_to "Edit", edit_book_path(book), class: "btn btn-sm" %>
            <%= link_to "Delete", book, method: :delete, 
                        confirm: "Are you sure?", class: "btn btn-sm btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>